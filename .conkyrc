background yes
out_to_x yes
double_buffer yes
out_to_console no
alignment bottom_middle
gap_y 1
update_interval 1.0
total_run_times 0
use_spacer none
use_xft yes
xftfont Unifont
TEXT
${exec xprop -id $(xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print $NF}') | awk '/_NET_WM_NAME/{$1=$2="";print}' | tr -s ' ' | awk '{print substr($0, 3, length($0) - 3)}'} | ${exec bspc query -D -d --names} | ${exec alive} | ${acpitemp}C | ${battery} ${battery_time} | RAM:$memperc% | CPU:${cpu}% | Vol: ${exec amixer get Master | grep "Front Left:" | awk '{print $5 $6}'} | ${wireless_essid} | ${fs_free} | ${exec curl -s https://ipinfo.io/ip}
